<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/yuan"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/window_delete_text"
        android:layout_margin="20dp"
        android:text="确定要删除吗？"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/window_delete_yes"
            android:text="确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/window_delete_text" />

        <Button
            android:id="@+id/window_delete_no"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/window_delete_text"
            android:layout_toRightOf="@id/window_delete_yes"
            android:layout_marginLeft="@dimen/dp_30" />

    </LinearLayout>


</LinearLayout>